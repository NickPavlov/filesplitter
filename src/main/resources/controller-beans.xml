<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Services -->
    <bean id="fileSplitService" class="com.sysgears.filesplitter.controller.services.FileSplitService">
        <constructor-arg index="0" ref="pool" />
        <constructor-arg index="1" ref="userInterface" />
        <constructor-arg index="2" ref="fileFinder" />
        <constructor-arg index="3" ref="cmdParser" />
        <constructor-arg index="4" ref="splitOptions" />
        <constructor-arg index="5" ref="progressMonitor" />
    </bean>

    <bean id="fileBuildService" class="com.sysgears.filesplitter.controller.services.FileBuildService">
    </bean>
    <!-- /Services -->

    <bean id="mainController" class="com.sysgears.filesplitter.controller.MainController">
        <constructor-arg ref="fileSplitService" index="0" />
        <constructor-arg ref="fileBuildService" index="1" />
    </bean>

</beans>