<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="executors" class="java.util.concurrent.Executors" />

    <bean id="fileSplitService" class="com.sysgears.filesplitter.controller.services.FileSplitService">
        <constructor-arg type="java.util.concurrent.ExecutorService" value="#{executors.newFixedThreadPool(2)}"/>
        <constructor-arg ref="userInterface"/>
    </bean>

    <bean id="fileBuildService" class="com.sysgears.filesplitter.controller.services.FileBuildService">

    </bean>

    <bean id="mainController" class="com.sysgears.filesplitter.controller.MainController">
        <constructor-arg ref="fileSplitService"/>
        <constructor-arg ref="fileBuildService"/>
    </bean>

</beans>