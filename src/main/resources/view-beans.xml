<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="in" class="com.sysgears.filesplitter.model.util.SystemStreams"
          factory-method="getInputStream" />

    <bean id="out" class="com.sysgears.filesplitter.model.util.SystemStreams"
          factory-method="getOutputStream" />

    <bean id="userInterface" class="com.sysgears.filesplitter.view.UserInterface">
        <constructor-arg index="0" ref="in" />
        <constructor-arg index="1" ref="out" />
    </bean>

</beans>