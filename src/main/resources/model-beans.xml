<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileFinder" class="com.sysgears.filesplitter.model.filesystem.file.FileFinder" />

    <bean id="splitOptions" class="com.sysgears.filesplitter.model.consoleoptions.SplitOptions" />

    <bean id="cmdParser" class="org.kohsuke.args4j.CmdLineParser" >
        <constructor-arg ref="splitOptions" index="0" />
    </bean>

</beans>