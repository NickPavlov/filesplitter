<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- file system -->

    <bean id="fileFinder" class="com.sysgears.filesplitter.model.filesystem.file.FileFinder" />


    <!-- command line components -->

    <bean id="splitOptions" class="com.sysgears.filesplitter.model.consoleoptions.SplitOptions" />

    <bean id="buildOptions" class="com.sysgears.filesplitter.model.consoleoptions.BuildOptions" />


    <!-- statistics -->

    <bean id="progressMonitor" class="com.sysgears.filesplitter.model.statistics.monitor.ProgressMonitor" />

</beans>